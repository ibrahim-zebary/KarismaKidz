<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_kite"
    tools:context=".SkyKite">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_down"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_down" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_up"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_up" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_left" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_right"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_right" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_down2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_down" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_left2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_left" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_right2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_right" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/kite_up2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kite_up" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        android:background="#005B96">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ژمارەی کۆلارەکان چەند بوو ؟"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="8"
                android:textSize="35dp"
                android:text="٨" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="7"
                android:textSize="35dp"
                android:text="٧" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="6"
                android:textSize="35dp"
                android:text="٦" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="5"
                android:textSize="35dp"
                android:text="٥" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="4"
                android:textSize="35dp"
                android:text="٤" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="3"
                android:textSize="35dp"
                android:text="٣" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="2"
                android:textSize="35dp"
                android:text="٢" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="checkAnswer"
                android:tag="1"
                android:textSize="35dp"
                android:text="١" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#005B96"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <TextView
            android:id="@+id/message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     تۆ ئامادەی ؟    "
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="بەڵێ"
            android:textSize="35dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kite_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="24dp"
        android:background="#005B96"
        android:text="کۆلارەکان بژمێرە"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1072dp"
        android:layout_marginStart="1072dp"
        android:layout_marginTop="40dp"
        android:text="٠٠:١٥"
        android:textColor="#000000"
        android:textSize="35dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>