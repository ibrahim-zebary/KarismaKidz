<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ballon"
    tools:context=".BallonAddition">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="120dp"
        android:layout_height="290dp"
        android:onClick="startBallons"
        android:visibility="invisible"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="270dp" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="120dp"
        android:layout_height="290dp"
        android:onClick="startBallons"
        android:visibility="invisible"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="377dp"
        tools:layout_editor_absoluteY="270dp" />

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="120dp"
        android:layout_height="290dp"
        android:onClick="startBallons"
        android:visibility="invisible"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="580dp"
        tools:layout_editor_absoluteY="270dp" />

    <ImageView
        android:id="@+id/img_4"
        android:layout_width="120dp"
        android:layout_height="290dp"
        android:onClick="startBallons"
        android:visibility="invisible"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="803dp"
        tools:layout_editor_absoluteY="270dp" />

    <ImageView
        android:id="@+id/img_5"
        android:layout_width="120dp"
        android:layout_height="290dp"
        android:onClick="startBallons"
        android:visibility="invisible"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="1018dp"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:background="#005B96"
        android:padding="5dp"
        android:text="            "
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/start_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#005B96"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <TextView
            android:id="@+id/message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     تۆ ئامادەی ؟    "
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="بەڵێ"
            android:textSize="35dp"/>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/firework_gif1"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="116dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/firework_gif1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/firework_gif2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/firework_gif2"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/sad_face_gif"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/sad_face_gif"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>