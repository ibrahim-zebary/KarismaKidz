<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fox"
    tools:context=".FoxHouse">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolf1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="552dp"
        android:layout_marginStart="552dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/deer"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolf2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="552dp"
        android:layout_marginStart="552dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/deer"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolf3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="552dp"
        android:layout_marginStart="552dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/deer"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolf4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="552dp"
        android:layout_marginStart="552dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/deer"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/wolf5"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="552dp"
        android:layout_marginStart="552dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/deer"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/house"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="332dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house" />

    <LinearLayout
        android:id="@+id/start_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="212dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="164dp"
        android:background="#A3D76D"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     تۆ ئامادەی ؟     "
            android:textSize="35dp" />

        <Button
            android:id="@+id/repeat_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="بەڵێ"
            android:textSize="35dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/answers_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="164dp"
        android:background="#A3D76D"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/answers_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="چەند ڕێوی چوون بۆ خانووەکە ؟     "
            android:textAlignment="center"
            android:textSize="35dp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="setAnswer"
                android:tag="5"
                android:text="٥"
                android:textSize="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="setAnswer"
                android:tag="4"
                android:text="٤"
                android:textSize="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="setAnswer"
                android:tag="3"
                android:text="٣"
                android:textSize="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="setAnswer"
                android:tag="2"
                android:text="٢"
                android:textSize="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="setAnswer"
                android:tag="1"
                android:text="١"
                android:textSize="35dp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>